model Student {
  studentId          String      @id @default(uuid())
  studentName        String
  studnetLastName    String
  studentDni         String
  studentPhone       String
  studentEmail       String
  studentStartDate   DateTime
  createdAt          DateTime    @default(now())
  StudentType        StudentType @relation(fields: [studentTypeStudent], references: [studentTypeId])
  studentTypeStudent String
}

model StudentType {
  studentTypeId   String    @id @default(uuid())
  studentTypeName String
  studentTypeDesc String
  student         Student[]
}
